<?xml version="1.0" encoding="UTF-8"?>
<component name="comicsGridScreen" extends="Group"  initialFocus="posterGrid">
    <script type="text/brightscript" uri="comicsGridScreen.brs" />
    <script type="text/brightscript" uri="../Utils/utils.brs" />
	<interface>
        <!-- Specifies the content for the Grid -->
        <field id="content" type="node" onchange="onContentChange" alias="posterGrid.content" />
        <field id="itemSelected" type="integer" alwaysnotify="true" alias="posterGrid.itemSelected" />
    </interface>
    <children>
        <Label id = "title" width = "450" height = "95" visible = "false" color = "0xFFFFFFFF" horizAlign="center" text = "MARVEL COMICS" font = "font:MediumBoldSystemFont" />
        <PosterGrid id = "posterGrid" basePosterSize = "[ 300, 200 ]" caption1NumLines = "1" numColumns = "3" itemSpacing = "[ 20, 20 ]" posterDisplayMode = "scaleToFill"/>
    </children>
</component>
